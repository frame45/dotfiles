[alias]
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  st = status -sb
  mylog = log --pretty=format:'%h %s [%an]' --graph
  grp = grep --break --heading --line-number

[color]
  status = auto
  branch = auto
  ui = true
  # diff = auto
  # grep = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = red
  untracked = cyan

[core]
  excludesfile = ~/dotfiles/gitexcludes
  editor = edit -w

[push]
  default = current

[user]
  email = matt.yakel@gmail.com
  name = Matt Yakel

[grep]
  extendRegexp = true
  lineNumber = true
